<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/action_bar_bg"/>

        <ImageView
            android:id="@+id/bg"
            android:layout_width="420dp"
            android:layout_height="620dp"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/title_bg"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_ac_main_frag_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tl_ac_main_bottom_menu">
        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_ac_main_bottom_menu"
            app:tabBackground="@drawable/tabbar_design"
            app:tabIndicator="@color/oicysmain"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true">
        </com.google.android.material.tabs.TabLayout>

</RelativeLayout>